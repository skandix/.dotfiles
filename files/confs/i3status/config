# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ipv6"
order += "ethernet _first_"
order += "volume"
order += "battery 0"
order += "disk /"
order += "memory"
order += "uptime"
order += "tztime local"


# When things are not live i don't want to see it ! 
wireless _first_ {
        format_up = "(%quality at %essid %bitrate) %ip"
        format_down = ""
}

ipv6 {
        format_up = "%ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = ""
}

battery 0 {
        format = "%status %percentage ETA: %emptytime"
        format_down = ""
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}


tztime local {
        format = "%d-%m-%Y %H:%M:%S"
}

memory {
        format = "RAM: %used | %available"
        threshold_degraded = "1M"
        format_degraded = "MEMORY < %available"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:1"
}

disk "/" {
        format = "C:/ %avail"
}

read_file uptime {
        path = "/proc/uptime"
}
