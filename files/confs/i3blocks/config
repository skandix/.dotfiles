command=$HOME/.dotfiles/scripts/blocks/$BLOCK_NAME
markup=none

[battery]
label=ïƒ§
instance=0
interval=5

[space]
label=C:/ 
instance=/
interval=30

[memory]
label=RAM: 
instance=mem;used
interval=30

[cpu]
label=CPU: 
interval=2

# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

# Query my default IP address only on startup
[ip]
command=hostname -i | awk '{ print "IP:" $1 }'
interval=once
color=#91E78B

[btc]
command=$HOME/.dotfiles/scripts/cointicker.sh
interval=5
color=#f7931a

# Update time every 5 seconds
[time]
command=date +%T
interval=5


